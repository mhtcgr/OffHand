<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Button Styles -->
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <style name="AppButton.Secondary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primaryColor</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="AppButton.Small" parent="AppButton">
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="AppText">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>
    
    <style name="AppText.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="AppText.Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="AppText.Body">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="AppText.Caption">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>
    
    <!-- Card Styles -->
    <style name="AppCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    
    <!-- Input Styles -->
    <style name="AppEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primaryColor</item>
        <item name="hintTextColor">@color/primaryColor</item>
    </style>
    
    <!-- App Bar Styles -->
    <style name="AppTopBar">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">4dp</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="AppBottomBar">
        <item name="android:background">@color/white</item>
        <item name="android:elevation">8dp</item>
        <item name="android:padding">12dp</item>
    </style>
</resources> 